// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js & TypeScript",
	"dockerFile": "../DockerFile",
	"workspaceFolder": "/workspaces/NextWebDev/AboutMeSite",
	"mounts": "source=${localWorkspaceFolder}/AboutMeSite/.env,target=/workspaces/NextWebDev/AboutMeSite/.env,type=bind",

	"postCreateCommand": "npm install",
	"postAttachCommand": "npm run dev",

	"customizations": {
		"vscode": {
        "extensions": [
            "ms-vscode-remote.remote-containers", // Already included
            "dbaeumer.vscode-eslint",            // Example: ESLint
            "esbenp.prettier-vscode",            // Example: Prettier
            "prisma.prisma",                     // Example: Prisma
            "ms-azuretools.vscode-docker",        // Example: Docker
			"eamodio.gitlens",                   // GitLens
			"bradlc.vscode-tailwindcss",         // Tailwind CSS
			"pranaygp.vscode-css-peek",          // CSS Peek
			"ms-edgedevtools.vscode-edge-devtools", // Debugger for Edge
			"ecmel.vscode-html-css",             // HTML/CSS IntelliSense
			"donjayamanne.python-extension-pack", // Python Extension Pack
			"ms-vscode.vscode-typescript-next",  // TypeScript and JavaScript
			"bierner.markdown-mermaid"
	]
    },
	
	"portsAttributes": {
		"3000": {
			"label": "Application",
			"onAutoForward": "openPreview"
		}
	},
	"forwardPorts": [3000]





	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
